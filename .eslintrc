{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-console": 1, // Warning users to remove console logs
    "default-case": 1, // Warning users to have a default in a switch statement
    "max-lines": [1, { "max": 300 }], //Max lines per file, max set to 100
    "prettier/prettier": 2
  },
  "env": {
    "jest": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
